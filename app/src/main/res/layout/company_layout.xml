<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#412C2C"
        app:cardCornerRadius="2dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="136dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/companyname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Butterfly Pvt.Ltd"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/companyimage2"
                android:layout_width="368dp"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/conflowercompany" />

            <TextView
                android:id="@+id/location2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_location_on_24"
                android:text="MIDC satara"
                android:textColor="#FEFEFE"
                app:drawableTint="#FFFFFF" />

            <TextView
                android:id="@+id/comapydescription2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pure high quality conflour and Icing Sugar with export quality pharama grade."
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/companyapplybtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apply" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>