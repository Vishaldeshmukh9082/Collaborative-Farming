<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/uregister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9E4"
    tools:context=".Client_Register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="254dp"
                android:layout_height="225dp"
                app:srcCompat="@drawable/app_logo" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="Register Here"
                android:textColor="#4F3939"
                android:textSize="16sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#000000"
                app:passwordToggleDrawable="@drawable/right_arrow" />


            <EditText
                android:id="@+id/txt_loginpass"
                android:layout_width="363dp"
                android:layout_height="63dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawableStart="@drawable/baseline_person_24"
                android:ems="10"
                android:hint="Enter name"
                android:inputType="text" />


            <EditText
                android:id="@+id/txt_contactno"
                android:layout_width="362dp"
                android:layout_height="55dp"
                android:drawableStart="@drawable/baseline_phone_24"
                android:ems="10"
                android:hint="Enter mobile no"
                android:inputType="phone" />

            <EditText
                android:id="@+id/txt_emailid"
                android:layout_width="362dp"
                android:layout_height="59dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/baseline_email_24"
                android:ems="10"
                android:hint="Enter Email Id"
                android:inputType="textEmailAddress" />

            <RadioGroup
                android:layout_width="362dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="90dp"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:paddingStart="2dp"
                    android:text="Gender"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="137dp"
                    android:layout_height="wrap_content"
                    android:text="Female" />
            </RadioGroup>

            <EditText
                android:id="@+id/txt_address"
                android:layout_width="362dp"
                android:layout_height="58dp"
                android:drawableStart="@drawable/baseline_location_city_24"
                android:ems="10"
                android:hint="Enter Address"
                android:inputType="textPostalAddress" />

            <EditText
                android:id="@+id/txt_password"
                android:layout_width="361dp"
                android:layout_height="57dp"
                android:drawableStart="@drawable/baseline_lock_24"
                android:ems="10"
                android:hint="Enter password"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/register_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Register"
                app:backgroundTint="#4F3939" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>